<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">

    <!--LG Hibernate Template-->
    <bean id="lgCommonBizHibernateTemplate" class="org.springframework.orm.hibernate3.HibernateTemplate">
        <property name="sessionFactory" ref="lgSessionFactory"/>
    </bean>

    <!--LG Abstract Manager-->
    <bean id="lgCommonBizAbstractManager" class="com.lanchui.commonBiz.manager.lg.LgAbstractManager" abstract="true">
        <property name="hibernateTemplate" ref="lgCommonBizHibernateTemplate"/>
    </bean>
    <!--LG  Manager-->
    <bean id="shopInfoManager" class="com.lanchui.commonBiz.manager.lg.SimpleShopInfoManager"
          parent="lgCommonBizAbstractManager">
    </bean>
  </beans>