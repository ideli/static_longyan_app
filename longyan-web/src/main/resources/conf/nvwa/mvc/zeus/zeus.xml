<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
  "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
  "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
  <package name="zeus" extends="struts-default" namespace="/zeus">
    <result-types>
      <result-type name="json" class="org.apache.struts2.support.JSONResult"/>
    </result-types>
    <!--配置后台拦截器-->
    <interceptors>
      <interceptor name="authentication" class="com.greatbee.security.interceptor.AuthenticationInterceptor"/>
      <interceptor-stack name="resource_authentication">
        <interceptor-ref name="authentication"/>
        <interceptor-ref name="defaultStack"/>
      </interceptor-stack>
    </interceptors>
    <default-interceptor-ref name="resource_authentication"/>
    <global-results>
      <result name="json" type="json">
        <param name="objectType">object</param>
        <param name="objectName">response</param>
        <param name="excludes">null</param>
      </result>
      <result name="error">error.jsp</result>
      <result name="error_ajax">error_ajax.jsp</result>
      <result name="error_runtime">error_runtime.jsp</result>

      <result name="no_auth" type="json">
        <param name="objectType">object</param>
        <param name="objectName">response</param>
        <param name="excludes">null</param>
      </result>
    </global-results>
    <global-exception-mappings>
      <exception-mapping exception="java.lang.RuntimeException" result="error_runtime"/>
    </global-exception-mappings>

    <!--主要业务-->
    <!--Columns 读取所有的配置字段-->
    <action name="columns" class="zeusAction" method="columns"/>

    <!--自定义列表-->
    <action name="custom_columns" class="zeusAction" method="customColumns"/>

    <!--读取连接器-->
    <action name="connectors" class="zeusAction" method="connectors"/>

    <!--读取OI&Fields的配置-->
    <action name="fields" class="zeusAction" method="fields"/>

    <!--Page Data-->
    <action name="page_data" class="zeusAction" method="page"/>

    <!--导出数据-->
    <action name="export" class="zeusExportAction" method="export"/>

    <!--Read-->
    <action name="read" class="zeusAction" method="read"/>

    <!--字段唯一判断-->
    <action name="unique" class="zeusAction" method="unique"/>

    <!--读取表单数据-->
    <action name="form" class="zeusAction" method="form"/>

    <!--保存数据-->
    <action name="form_save" class="zeusAction" method="formSave"/>

    <!--拷贝数据-->
    <action name="copy" class="zeusAction" method="copy"/>

    <!--删除-->
    <action name="remove" class="zeusAction" method="remove"/>

    <!--更新字段-->
    <action name="update_field" class="zeusAction" method="updateField"/>

    <!--批量更新字段-->
    <action name="batch_update_field" class="zeusAction" method="batchUpdate"/>

    <!--业务相关-->
    <!--生成序列号-->
    <action name="build_serialNumber" class="zeusBusinessAction" method="buildSerialNumber"/>
    <!--培训-->
    <action name="training" class="zeusBusinessAction" method="training"/>

    <!--语言-->
    <action name="languages" class="zeusBusinessAction" method="languages"/>

    <!--翻译-->
    <action name="translate" class="zeusBusinessAction" method="translate"/>

    <!--保存翻译-->
    <action name="save_translate" class="zeusBusinessAction" method="saveTranslate"/>

    <!--读取序列号配置-->
    <action name="read_sn_config" class="zeusBusinessAction" method="readSNConfig"/>
    <!--保存配置-->
    <action name="save_sn_config" class="zeusBusinessAction" method="saveSNConfig"/>
    <!--读取数据报表-->
    <action name="read_data_size_report" class="zeusBusinessAction" method="readDataSizeReport"/>
    <!--读取Dashboard配置列表-->
    <action name="dashboards" class="zeusBusinessAction" method="readDashboardConfig"/>
    <!--读取widget配置列表-->
    <action name="widgets" class="zeusBusinessAction" method="readWidgetConfig"/>
    <!--读取业务Widgets列表-->
    <action name="read_business_widgets" class="zeusBusinessAction" method="readBusinessWidgets"/>
    <!--保存业务Widget-->
    <action name="save_business_widget" class="zeusBusinessAction" method="saveBusinessWidget"/>
    <!--删除业务Widget-->
    <action name="remove_business_widget" class="zeusBusinessAction" method="removeBusinessWidget"/>
    <!--发送邮件-->
    <action name="send_mail" class="zeusBusinessAction" method="sendMail"/>
    <!--根据打印的layoutConfig输出pdf-->
    <action name="export_pdf" class="zeusExportAction" method="exportPdf"/>
    <!--输出JavaScript脚本-->
    <action name="export_java_script" class="zeusExportAction" method="exportJavaScript"/>
    <!--导出到FTP-->
    <action name="export_ftp" class="zeusExportAction" method="exportFTP"/>

    <!--配置相关-->
    <!--表单布局-->
    <action name="form_layout" class="zeusConfigAction" method="formLayout"/>
    <!--列表布局-->
    <action name="pagination_layout" class="zeusConfigAction" method="paginationLayout"/>
    <!--配置搜索-->
    <action name="search_layout" class="zeusConfigAction" method="searchLayout"/>
    <!--读取Module SP-->
    <action name="read_module_sp" class="zeusConfigAction" method="readModuleSP"/>
    <!--读取字段配置选项-->
    <action name="read_field_edit_options" class="zeusConfigAction" method="readFieldEditOptions"/>

    <!--Zeus DB Action-->
    <!--显示表格SQL-->
    <action name="show_table_sql" class="zeusDBAction" method="showTableSql"/>
    <!--显示字段SQL-->
    <action name="show_field_sql" class="zeusDBAction" method="showFieldSql"/>
    <!--显示JavaBean-->
    <action name="show_java_bean" class="zeusDBAction" method="showJavaBean"/>
    <!--显示XML-->
    <action name="show_hibernate_xml" class="zeusDBAction" method="showHibernateXML"/>

    <!--Module Import Data-->
    <action name="module_import_data" class="zeusImportAction" method="importData"/>


    <!--Schema 相关-->
    <!--执行sql-->
    <action name="schema_execute_sql" class="zeusSchemaAction" method="executeSQL"/>

    <!--创建数据表-->
    <action name="schema_create_table" class="zeusSchemaAction" method="createTable"/>

    <!--删除数据表-->
    <action name="schema_drop_table" class="zeusSchemaAction" method="dropTable"/>

    <!--添加列-->
    <action name="schema_add_column" class="zeusSchemaAction" method="addColumn"/>

    <!--删除列-->
    <action name="schema_drop_column" class="zeusSchemaAction" method="dropColumn"/>

    <!--修改列属性-->
    <action name="schema_change_column" class="zeusSchemaAction" method="changeColumn"/>
  </package>
</struts>