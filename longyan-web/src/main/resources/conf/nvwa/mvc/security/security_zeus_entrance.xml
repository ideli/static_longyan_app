<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
  "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
  "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
  <package name="security_zeus_entrance" extends="struts-default" namespace="/security-zeus">
    <result-types>
      <result-type name="json" class="org.apache.struts2.support.JSONResult"/>
    </result-types>
    <global-results>
      <result name="json" type="json">
        <param name="objectType">object</param>
        <param name="objectName">response</param>
        <param name="excludes">null</param>
      </result>
      <result name="error">error.jsp</result>
      <result name="error_ajax">error_ajax.jsp</result>
      <result name="error_runtime">error_runtime.jsp</result>
    </global-results>
    <global-exception-mappings>
      <exception-mapping exception="java.lang.RuntimeException" result="error_runtime"/>
    </global-exception-mappings>

    <!--Zeus Index-->
    <action name="zeus" class="zeusEntranceAction" method="index">
      <result>../zeus/index.jsp</result>
      <result name="time_out" type="redirectAction">
        <param name="actionName">login</param>
        <param name="namespace">/security-zeus</param>
      </result>
      <exception-mapping exception="com.xiwa.base.cmd.SessionTimeoutException" result="time_out"/>
    </action>

    <!--Login Action-->
    <action name="login" class="zeusEntranceAction" method="login">
      <result>../zeus/login.jsp</result>
      <result name="redirect" type="redirectAction">
        <param name="actionName">zeus</param>
        <param name="namespace">/security-zeus</param>
      </result>
    </action>

    <!--Logout-->
    <action name="logout" class="zeusEntranceAction" method="logout">
      <result>../zeus/login.jsp</result>
    </action>

    <!--Auth Action-->
    <action name="auth" class="zeusEntranceAction" method="auth"/>
  </package>
</struts>